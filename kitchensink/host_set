#!/bin/bash

[ "$(whoami)" != "root" ] && {
	echo "Need root baby"
	exit 1
}

cd /root
mkdir .ssh
chmod 0700 .ssh
cat >> .ssh/authorized_keys << EOF
ssh-rsa  fabbione@trider-g7
EOF
chmod 0400 .ssh/authorized_keys
[ -n "$(which restorecon)" ] && {
	restorecon .ssh
	restorecon .ssh/authorized_keys
}
yum update -y
yum install -y git autoconf automake
rm -rf cbox
git clone git://github.com/fabbione/cbox.git
