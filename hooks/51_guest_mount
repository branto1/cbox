#!/bin/bash

set -e

echo "Mounting main/first VM disk in $cboxtempdir/$cboxclustername-mount"

cd $cboxtempdir

mkdir -p $cboxclustername-mount

if [ -z "$cboxuseloop" ]; then
    guestmount \
		-a $cboxclustername-boot/$cboxclustername-boot-vda.raw \
		-m /dev/vda1 \
		$cboxclustername-mount
else
	name=$(kpartx -p p -a $cboxclustername-boot/$cboxclustername-boot-vda.raw -v | grep p1 | cut -d' ' -f 3)
	mount /dev/mapper/$name $cboxclustername-mount
fi

exit 0
